<?xml version="1.0"?>
<layout>
    <!-- Succes Page -->
    <ebanx_checkout_success_handle>
        <reference name="head">
            <action method="addJs">
                <script>ebanx/clipboard/clipboard.min.js</script>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>ebanx/js/success.js</name>
            </action>
        </reference>
        <reference name="checkout.success">
            <action method="setTemplate">
                <template helper="ebanx/getSuccessTemplate"></template>
            </action>
        </reference>
    </ebanx_checkout_success_handle>

    <checkout_onepage_success>
        <update handle="ebanx_checkout_success_handle"/>
    </checkout_onepage_success>

    <onepagecheckout_index_success>
        <update handle="ebanx_checkout_success_handle"/>
    </onepagecheckout_index_success>
</layout>