<?xml version="1.0"?>
<layout>
    <!-- Succes Page -->
    <ebanx_checkout_success_handle>
        <reference name="head">
            <action method="addJs">
                <script>ebanx/clipboard/clipboard.min.js</script>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>ebanx/js/success.js</name>
            </action>
        </reference>
        <reference name="checkout.success">
            <block type="ebanx/checkout_success_payment_boleto" name="ebanx.success.payment.boleto" as="ebanx_boleto" template="ebanx/checkout/success/boleto.phtml"/>
            <block type="ebanx/checkout_success_payment_baloto" name="ebanx.success.payment.baloto" as="ebanx_baloto" template="ebanx/checkout/success/baloto.phtml"/>
        </reference>
    </ebanx_checkout_success_handle>

    <checkout_onepage_success>
        <update handle="ebanx_checkout_success_handle"/>
    </checkout_onepage_success>

    <onepagecheckout_index_success>
        <update handle="ebanx_checkout_success_handle"/>
    </onepagecheckout_index_success>
</layout>